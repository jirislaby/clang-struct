<h1>Listing structures</h1>
<div>
  <%= render 'shared/search_filters' %>
  <div>
    Number of listed structures: <strong><%= @structs_count %></strong>
  </div>
  <table class="structs">
    <thead>
      <tr>
        <td>Number</td>
        <td>Struct</td>
        <td>Source</td>
        <td>Line</td>
        <td>Column</td>
      </tr>
    </thead>
    <tbody>
      <% @structs.each_with_index do |struct, i| %>
        <tr id="et<%= struct.id %>">
          <td><%= i + 1 %></td>
          <td><%= link_to(struct.name, struct_path(struct)) %>
            (<%= src_link_to('src', struct.src_file, struct.begLine) %>)</td>
          <td><%= struct.src_file %></td>
          <td><%= struct.begLine %></td>
          <td><%= struct.begCol %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
