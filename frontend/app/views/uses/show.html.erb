<h1>Listing uses of <span class="backlink"><%= link_to(@member.struct.name, struct_path(@member.struct)) %>.<%= @member.name %></span></h1>
<div>
  <div>
    Number of listed uses: <strong><%= @uses_count %></strong>
  </div>
  <table class="structs">
    <thead>
      <tr>
        <td>Source</td>
        <td>Line</td>
        <td>Column</td>
      </tr>
    </thead>
    <tbody>
      <% @uses.each do |use| %>
        <tr>
          <td><%= src_link_to(use.src_file, use.src_file, use.begLine) %></td>
          <td><%= use.begLine %></td>
          <td><%= use.begCol %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
